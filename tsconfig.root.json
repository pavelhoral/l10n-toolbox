{
  "compilerOptions": {
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["ES2021"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "skipLibCheck": true,
    "paths": {
      "@prekladyher/l10n-toolbox-engine/*": [
        "./packages/engine/src/*/index.ts"
      ],
      "@prekladyher/l10n-toolbox-gettext": [
        "./packages/gettext/src/index.ts"
      ]
    },
    "strict": true,
    "target": "ES2021",
  }
}
